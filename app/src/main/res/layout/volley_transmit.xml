<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_volley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="volley transmit" />

    <Button
        android:id="@+id/btn_volley2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="volley transmit 2" />

    <Button
        android:id="@+id/btn_volley3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="volley get image" />

    <Button
        android:id="@+id/btn_volley4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="volley get json" />

    <ImageView
        android:id="@+id/volley_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_volley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>
</LinearLayout>